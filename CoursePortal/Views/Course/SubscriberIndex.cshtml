@model CoursePortal.Models.User
@{
    ViewData["Title"] = "Course Portal";
}

<div class="text-center">
    <h1 class="display-4">Welcome to course portal, @Html.DisplayFor(model => model.Name)</h1>
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="Courses">My Courses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="AvailableCourses">Available Courses</a>
            </li>
        </ul>
    </div>
</div>
